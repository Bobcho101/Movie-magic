<section id="details-page">

    <div class="main_card">
        <div class="card_left">
            <div class="card_datails">

                <h1>{{currentMovieCopy.title}}</h1>
                <div class="card-movie">
                    <div class="first-info">
                        <p class="card-genre">Genre: {{currentMovieCopy.genre}}</p>
                        <p class="card-director">Directror: {{currentMovieCopy.director}}</p>
                        
                    </div>
                    <div class="second-info">
                        
                        <p class="card-year">Year: {{currentMovieCopy.year}}</p>
                        <p class="card-ranking">Rating: <span id="stars">{{currentMovieCopy.rating}}</span></p>
                    </div>

                </div>

                <p class="disc">Description: {{currentMovieCopy.description}}</p>
                    <p class="card-category">Category: {{currentMovieCopy.category}}</p>
            </div>
        </div>
        <div class="card_right">
            <img src="{{currentMovieCopy.moviePoster}}"
                alt="{{currentMovieCopy.title}}">
        </div>
    </div>

</section>


