<section id="search">
    <h1>Search</h1>
    <form action="/search" method="GET" class="form">
        <input type="text" class="search" name="search" placeholder="Title..." value="{{filter.search}}">
        <input type="text" name="genre" class="genre" placeholder="Genre..." value="{{filter.genre}}">
        <input type="number" name="year" class="year" placeholder="Year..." value="{{filter.year}}">
        <input type="submit" value="search">
    </form>
</section>

<section id="catalog">
    <div class="band">

        {{#if movies.length}}
                {{#each movies}}
                    <div class="flip flip-vertical">
                        <div class="front">
                            <img src="{{imageUrl}}" alt="{{title}}">
                        </div>
                        <div class="back">
                            <h1>{{title}}</h1>
                            <h2>Genre: {{genre}}</h2>
                            <p>Description: {{description}}</p>
                            <a href="details/{{id}}" class="details">Details</a>
                        </div>
                    </div>
                {{/each}}
            {{else}}
                <div class="no-posts">
                    <p class="no-offer">There are no posts yet...</p>
                </div>
            {{/if}}
    </div>
</section>

