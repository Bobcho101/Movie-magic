<section id="details-page">

    <div class="main_card">
        <div class="card_left">
            <div class="card_datails">
                <h1>{{currentMovie.title}}</h1>
                <div class="card-movie">
                    <div class="first-info">
                        <p class="card-genre">Genre: {{currentMovie.genre}}</p>
                        <p class="card-director">Directror: {{currentMovie.director}}</p>
                        
                    </div>
                    <div class="second-info">
                        
                        <p class="card-year">Year: {{currentMovie.year}}</p>
                        <p class="card-ranking">Rating: <span id="stars">{{stars}}</span></p>
                    </div>

                </div>

                <p class="disc">Description: {{currentMovie.description}}</p>
                <p class="card-category">Category: {{currentMovie.category}}</p>

                <!--Owner-->
                {{#if isOwner}}
                <div style="display: flex; justify-content: center;">
                    <a href="/details/{{currentMovie.id}}/attach-cast" class="details">Attach</a>
                    <a class="details">Edit</a>
                    <a class="details">Delete</a>
                </div>
                {{/if}}
                
                 <!--Owner-->
            </div>
        </div>
        <div class="card_right">
            <img src="{{currentMovie.imageUrl}}"
                alt="{{currentMovie.title}}">
        </div>
    </div>
    
 <div class="main-cast-card">
    {{#each casts}}
        <div class="cast-card">
            <div class="card-img">
                <img src="{{castImage}}"
                    alt="{{name}}">
            </div>
            <div class="cast-info">
                <h1>{{name}}</h1>
                <h3>Age: {{age}}</h3>
                <h3>Born: {{born}}</h3>
                <h3>Name in Movie: {{nameInMovie}}</h3>
            </div>
        </div>
    {{/each}}
        
</div>
</section>


